<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="horizontal">
    <fragment android:layout_width="0dp"
              android:layout_height="match_parent"
              android:name="com.example.prj_02.OptionListFragment" android:id="@+id/options"
              tools:layout="@layout/optionlist" android:layout_weight="0"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:orientation="vertical">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:id="@+id/add" android:onClick="onClickAdd"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="REF"
                android:id="@+id/refresh" android:onClick="refreshList" android:longClickable="true"/>
    </LinearLayout>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listview"></ListView>
</LinearLayout>

